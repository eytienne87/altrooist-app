<div class="container">
  <h1>Tell us a bit more about you</h1>
  <%= simple_form_for(@profile, url: :profile) do |f| %>
    <h3>Locations</h3>
    <div class="form-group">
      <div id="locations">
        <%= f.simple_fields_for :locations do |location| %>
          <%= render 'location_fields', f: location %>
        <% end %>
      </div>
      <div class="links">
        <%= link_to_add_association 'add location', f, :locations, class: 'btn btn-success' %>
      </div>
    </div>
    <h3>Interests</h3>
    <div class="form-group">
      <div id="interests">
        <%= f.simple_fields_for :interests do |interest| %>
          <%= render 'interest_fields', f: interest %>
        <% end %>
      </div>
      <div class="links">
        <%= link_to_add_association 'add category', f, :interests, class: 'btn btn-success' %>
      </div>
    </div>
    <%= f.submit 'Submit', class: 'button' %>
  <% end %>
</div>
